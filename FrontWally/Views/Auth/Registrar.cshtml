@model UsuarioRegistroDTO
@{
    ViewData["Title"] = "Registrarse";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crear Cuenta - WallyShop</title>

    <!-- Fuentes y Iconos -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        :root {
            --primary-color: #1877f2;
            --primary-dark: #0d66d0;
            --secondary-color: #42b72a;
            --dark-color: #1c1e21;
            --light-color: #f0f2f5;
            --gray-color: #65676b;
            --border-color: #dddfe2;
            --white: #ffffff;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--light-color);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .register-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
            background: var(--light-color);
        }

        .register-card {
            background: var(--white);
            border-radius: 16px;
            box-shadow: var(--shadow);
            padding: 40px;
            width: 100%;
            max-width: 480px;
            border: 1px solid var(--border-color);
            position: relative;
            overflow: hidden;
        }

            .register-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: var(--gradient);
            }

        .logo-section {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo {
            font-size: 2.5rem;
            font-weight: 700;
            background: var(--gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        .logo-subtitle {
            color: var(--gray-color);
            font-size: 1rem;
            font-weight: 400;
        }

        .register-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--dark-color);
            text-align: center;
            margin-bottom: 8px;
        }

        .register-subtitle {
            color: var(--gray-color);
            text-align: center;
            margin-bottom: 30px;
            font-size: 0.95rem;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: 500;
            color: var(--dark-color);
            margin-bottom: 8px;
            display: block;
            font-size: 0.9rem;
        }

        .form-control {
            border: 2px solid var(--border-color);
            border-radius: 8px;
            padding: 12px 16px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: var(--white);
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(24, 119, 242, 0.1);
                background: var(--white);
            }

            .form-control::placeholder {
                color: #a0a4a8;
            }

        .btn-register {
            background: var(--secondary-color);
            border: none;
            border-radius: 8px;
            padding: 14px 20px;
            font-size: 1rem;
            font-weight: 600;
            color: var(--white);
            width: 100%;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

            .btn-register:hover {
                background: #36a420;
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(66, 183, 42, 0.3);
            }

            .btn-register:active {
                transform: translateY(0);
            }

        .login-link {
            display: block;
            text-align: center;
            background: var(--primary-color);
            color: var(--white);
            padding: 12px 20px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            margin-top: 20px;
        }

            .login-link:hover {
                background: var(--primary-dark);
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(24, 119, 242, 0.3);
                color: var(--white);
                text-decoration: none;
            }

        .alert-custom {
            border-radius: 8px;
            border: none;
            padding: 12px 16px;
            margin-bottom: 20px;
            font-size: 0.9rem;
        }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }

        .footer {
            background: var(--dark-color);
            color: var(--white);
            padding: 20px;
            text-align: center;
            margin-top: auto;
        }

            .footer a {
                color: var(--primary-color);
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        .input-icon {
            position: relative;
        }

            .input-icon i {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: var(--gray-color);
            }

            .input-icon .form-control {
                padding-left: 45px;
            }

        .password-requirements {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-top: 10px;
            font-size: 0.85rem;
            color: var(--gray-color);
        }

        .requirement {
            margin-bottom: 5px;
        }

            .requirement i {
                width: 16px;
                margin-right: 8px;
            }

            .requirement.valid {
                color: var(--secondary-color);
            }

            .requirement.invalid {
                color: var(--gray-color);
            }
    </style>
</head>

<body>
    <div class="register-container">
        <div class="register-card">
            <!-- Logo y Título -->
            <div class="logo-section">
                <div class="logo">WallyShop</div>
                <div class="logo-subtitle">Únete a nuestra comunidad</div>
            </div>

            <h1 class="register-title">Crear Cuenta</h1>
            <p class="register-subtitle">Comienza tu experiencia en WallyShop</p>

            <!-- Mensajes de error -->
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger alert-custom" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
                </div>
            }

            <!-- Formulario de Registro -->
            <form asp-action="Registrar" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label class="form-label">Nombre Completo</label>
                    <div class="input-icon">
                        <i class="fas fa-user"></i>
                        <input asp-for="Nombre" class="form-control"
                               placeholder="Tu nombre completo" required />
                    </div>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Correo Electrónico</label>
                    <div class="input-icon">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="Email" type="email" class="form-control"
                               placeholder="tuemail@ejemplo.com" required />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Contraseña</label>
                    <div class="input-icon">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" type="password" class="form-control"
                               placeholder="••••••••" required
                               id="passwordField" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <!-- Requisitos de contraseña -->
                    <div class="password-requirements">
                        <div class="requirement invalid" id="lengthReq">
                            <i class="fas fa-circle"></i>Mínimo 8 caracteres
                        </div>
                        <div class="requirement invalid" id="numberReq">
                            <i class="fas fa-circle"></i>Al menos un número
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-register" id="registerBtn">
                    <i class="fas fa-user-plus me-2"></i>Crear Cuenta
                </button>

                <a asp-controller="Auth" asp-action="Login" class="login-link">
                    <i class="fas fa-sign-in-alt me-2"></i>¿Ya tienes cuenta? Inicia Sesión
                </a>
            </form>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <p class="mb-0">
                &copy; @DateTime.Now.Year WallyShop. Todos los derechos reservados.
                <a href="#" class="ms-2">Política de Privacidad</a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function() {
            // Validación de contraseña en tiempo real
            $('#passwordField').on('input', function() {
                const password = $(this).val();

                // Validar longitud
                if (password.length >= 8) {
                    $('#lengthReq').removeClass('invalid').addClass('valid')
                        .find('i').removeClass('fa-circle').addClass('fa-check');
                } else {
                    $('#lengthReq').removeClass('valid').addClass('invalid')
                        .find('i').removeClass('fa-check').addClass('fa-circle');
                }

                // Validar números
                if (/\d/.test(password)) {
                    $('#numberReq').removeClass('invalid').addClass('valid')
                        .find('i').removeClass('fa-circle').addClass('fa-check');
                } else {
                    $('#numberReq').removeClass('valid').addClass('invalid')
                        .find('i').removeClass('fa-check').addClass('fa-circle');
                }
            });

            // Prevenir envío doble del formulario
            $('form').on('submit', function() {
                const btn = $(this).find('button[type="submit"]');
                btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Creando cuenta...');
            });

            // Efecto de focus en los inputs
            $('.form-control').on('focus', function() {
                $(this).parent().addClass('focused');
            }).on('blur', function() {
                if (!$(this).val()) {
                    $(this).parent().removeClass('focused');
                }
            });
        });
    </script>
</body>
</html>