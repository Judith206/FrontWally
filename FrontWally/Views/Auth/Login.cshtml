@model UsuarioLoginDTO
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null; // Importante para que no use el layout normal
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Login Page - Product Admin</title>
    
    <!-- Styles de la plantilla -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/templatemo-style.css" asp-append-version="true" />
</head>

<body>
    <div>
        <nav class="navbar navbar-expand-xl">
            <div class="container h-100">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <h1 class="tm-site-title mb-0">Product Admin</h1>
                </a>
                <button class="navbar-toggler ml-auto mr-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars tm-nav-icon"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto h-100">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                               aria-haspopup="true" aria-expanded="false">
                                <i class="far fa-file-alt"></i>
                                <span> Reports <i class="fas fa-angle-down"></i> </span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Daily Report</a>
                                <a class="dropdown-item" href="#">Weekly Report</a>
                                <a class="dropdown-item" href="#">Yearly Report</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i> Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Accounts" asp-action="Index">
                                <i class="far fa-user"></i> Accounts
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>

    <div class="container tm-mt-big tm-mb-big">
        <div class="row">
            <div class="col-12 mx-auto tm-login-col">
                <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h2 class="tm-block-title mb-4">Welcome to Dashboard</h2>
                            <p class="text-white">Please login to continue</p>
                        </div>
                    </div>
                    
                    <!-- Mostrar mensajes de error -->
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
                        </div>
                    }
                    
                    <div class="row mt-2">
                        <div class="col-12">
                            <form asp-action="Login" method="post" class="tm-login-form">
                                @Html.AntiForgeryToken()
                                
                                <div class="form-group">
                                    <label for="Email" class="text-white">Correo Electrónico</label>
                                    <input asp-for="Email" type="email" class="form-control validate" 
                                           id="Email" placeholder="tuemail@ejemplo.com" required 
                                           autocomplete="email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mt-3">
                                    <label for="Password" class="text-white">Contraseña</label>
                                    <input asp-for="Password" type="password" class="form-control validate" 
                                           id="Password" placeholder="********" required 
                                           autocomplete="current-password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                
                                <div class="form-group mt-4">
                                    <center><button type="submit" class="btn btn-primary btn-block text-uppercase">
                                        <i class="fas fa-sign-in-alt"></i> Ingresar
                                        </button>
                                    </center>
                                </div>
                                
                                <div class="mt-3 text-center">
                                    <p class="text-white mb-2">¿No tienes cuenta?</p>
                                    <a asp-controller="Auth" asp-action="Registrar" class="register-link">
                                        <i class="fas fa-user-plus"></i> Regístrate aquí
                                    </a>
                                </div>
                                
                                <div class="text-center mt-4">
                                    <button type="button" class="btn btn-outline-light btn-sm" 
                                            onclick="showForgotPassword()">
                                        <i class="fas fa-key"></i> ¿Olvidaste tu contraseña?
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <footer class="tm-footer row tm-mt-small footer-fixed">
        <div class="col-12 font-weight-light">
            <p class="text-center text-white mb-0 px-4 small">
                Copyright &copy; <b>@DateTime.Now.Year</b> All rights reserved. 
                Design: <a rel="nofollow noopener" href="https://templatemo.com" class="tm-footer-link">Template Mo</a>
            </p>
        </div>
    </footer>

    <!-- Scripts necesarios -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
 
</body>
</html>