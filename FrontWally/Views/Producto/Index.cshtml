@model IEnumerable<FrontWally.DTOs.ProductoDTOs.ProductoReadDTO>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos y Categorías</title>
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/templatemo-style.css">

<!-- Estilos específicos para la página de productos marketplace -->
<style>
    .marketplace-page {
            background-color: white;
        min-height: calc(100vh - 100px);
        padding: 20px 0;
    }
    
    .marketplace-content {
        background-color: white;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
    }
    
    .product-card {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        overflow: hidden;
        border: 1px solid #dddfe2;
        height: 100%;
    }
    
    .product-image-container {
        height: 200px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
    }
    
    .product-image {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
    }
    
    .product-info {
        padding: 15px;
    }
    
    .product-price {
        font-weight: 700;
        font-size: 1.25rem;
        color: #1877f2;
        margin-bottom: 5px;
    }
    
    .product-name {
        font-weight: 600;
        margin-bottom: 5px;
        color: #1c1e21;
        font-size: 1.1rem;
    }
    
    .product-description {
        color: #65676b;
        font-size: 0.9rem;
        margin-bottom: 10px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .product-status {
        display: inline-block;
        padding: 3px 8px;
        border-radius: 12px;
        font-size: 0.75rem;
        font-weight: 600;
    }
    
    .status-active {
        background-color: #e7f3ff;
        color: #1877f2;
    }
    
    .status-inactive {
        background-color: #f0f0f0;
        color: #65676b;
    }
    
    .product-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
        padding-top: 15px;
        border-top: 1px solid #dddfe2;
    }
    
    .btn-marketplace {
        border-radius: 6px;
        font-weight: 600;
        padding: 6px 12px;
        font-size: 0.85rem;
        text-decoration: none;
    }
    
    .btn-edit {
        background-color: #e7f3ff;
        color: #1877f2;
        border: 1px solid #1877f2;
    }
    
    .btn-delete {
        background-color: #ffe7e7;
        color: #fa383e;
        border: 1px solid #fa383e;
    }
    
    .btn-add-product {
        background-color: #42b72a;
        color: white;
        font-weight: 600;
        border-radius: 6px;
        padding: 10px 20px;
        margin: 20px 0;
        border: none;
        text-decoration: none;
        display: inline-block;
        text-align: center;
    }
    
    .filters-sidebar {
        background-color: white;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
        border: 1px solid #dddfe2;
    }
    
    .filter-title {
        font-weight: 600;
        margin-bottom: 15px;
        color: #1c1e21;
        font-size: 1.2rem;
    }
    
    .filter-section {
        margin-bottom: 20px;
    }
    
    .filter-section h6 {
        font-weight: 600;
        margin-bottom: 10px;
        color: #1c1e21;
        font-size: 1rem;
    }
    
    .category-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .category-list li {
        padding: 8px 0;
        border-bottom: 1px solid #dddfe2;
    }
    
    .category-list li:last-child {
        border-bottom: none;
    }
    
    .category-list a {
        color: #65676b;
        text-decoration: none;
        font-size: 0.9rem;
    }
    
    .category-list a:hover {
        color: #1877f2;
    }
    
    .location-info {
        color: #65676b;
        font-size: 0.9rem;
    }
    
    .product-location {
        font-size: 0.8rem;
        color: #65676b;
    }
    
    .product-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
    }
    
    .marketplace-title {
        color: #1877f2;
        font-weight: 700;
        margin-bottom: 20px;
        font-size: 1.8rem;
    }
</style>
</head>

<div class="marketplace-page">
    <div class="container-fluid">

        <div class="row">
            <!-- Sidebar de Filtros -->
            <div class="col-lg-3 col-md-4">
                <div class="filters-sidebar">
                    <h5 class="filter-title">Filtros</h5>

                    <div class="filter-section">
                        <h6>Ubicación</h6>
                        <div class="location-info">
                            <div>Summerville, South Carolina</div>
                            <div>Dentro de 17 millas</div>
                        </div>
                    </div>

                    <div class="filter-section">
                        <h6>Categorías</h6>
                        <ul class="category-list">
                            <li><a href="#">Todos los productos</a></li>
                            <li><a href="#">Alquileres</a></li>
                            <li><a href="#">Hogar y Jardín</a></li>
                            <li><a href="#">Vehículos</a></li>
                            <li><a href="#">Electrónicos</a></li>
                            <li><a href="#">Ventas para el Hogar</a></li>
                            <li><a href="#">Hobbies</a></li>
                        </ul>
                    </div>
                </div>

                <a asp-controller="Producto" asp-action="Crear" class="btn btn-add-product w-100">
                    <i class="fas fa-plus-circle me-2"></i>Agregar Producto Nuevo
                </a>
            </div>

            <!-- Lista de Productos -->
            <div class="col-lg-9 col-md-8">
                <div class="row">
                    @foreach (var producto in Model)
                    {
                        <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 mb-4">
                            <div class="product-card">
                                <div class="product-image-container">
                                    @if (producto.Imagen != null && producto.Imagen.Length > 0)
                                    {
                                        <img src="data:image/png;base64,@Convert.ToBase64String(producto.Imagen)"
                                             alt="Imagen Producto" class="product-image" />
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center justify-content-center h-100 text-muted">
                                            <i class="fas fa-image fa-3x"></i>
                                        </div>
                                    }
                                </div>

                                <div class="product-info">
                                    <div class="product-price">@producto.Precio.ToString("C")</div>
                                    <h5 class="product-name">@producto.Nombre</h5>
                                    <p class="product-description">@producto.Descripcion</p>

                                    <div class="product-meta">
                                        <span class="product-status @(producto.Estado ? "status-active" : "status-inactive")">
                                            @(producto.Estado ? "Activo" : "Inactivo")
                                        </span>
                                        <div class="product-location">
                                            <small>Summerville, SC · 6 días</small>
                                        </div>
                                    </div>

                                    <div class="product-actions">
                                        <a asp-controller="Producto" asp-action="Editar" asp-route-id="@producto.Id"
                                           class="btn btn-edit btn-marketplace" title="Editar">
                                            <i class="fas fa-edit me-1"></i> Editar
                                        </a>
                                        <a asp-controller="Producto" asp-action="Eliminar" asp-route-id="@producto.Id"
                                           class="btn btn-delete btn-marketplace" title="Eliminar">
                                            <i class="fas fa-trash-alt me-1"></i> Eliminar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<