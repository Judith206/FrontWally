@model IEnumerable<FrontWally.DTOs.ProductoDTOs.ProductoReadDTO>

@{
    ViewData["Title"] = "Productos y Categorías";

    // Obtener el ID del usuario actual para la lógica de autorización.
    // Se asume que el ID del usuario está en un Claim llamado "UserId".
    var currentUserIdClaim = User.FindFirst("UserId");
    int currentUserId = 0;

    if (currentUserIdClaim != null && int.TryParse(currentUserIdClaim.Value, out int userId))
    {
        currentUserId = userId;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos y Categorías</title>
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/templatemo-style.css">

    <style>
        .marketplace-page {
            background-color: white;
            min-height: calc(100vh - 100px);
            padding: 20px 0;
        }

        .marketplace-content {
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .product-card {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            overflow: hidden;
            border: 1px solid #dddfe2;
            height: 100%;
        }

        .product-image-container {
            height: 200px;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
        }

        .product-image {
            max-height: 100%;
            max-width: 100%;
            object-fit: contain;
        }

        .product-info {
            padding: 15px;
        }

        .product-price {
            font-weight: 700;
            font-size: 1.25rem;
            color: #1877f2;
            margin-bottom: 5px;
        }

        .product-name {
            font-weight: 600;
            margin-bottom: 5px;
            color: #1c1e21;
            font-size: 1.1rem;
        }

        .product-description {
            color: #65676b;
            font-size: 0.9rem;
            margin-bottom: 10px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .product-status {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .status-active {
            background-color: #e7f3ff;
            color: #1877f2;
        }

        .status-inactive {
            background-color: #f0f0f0;
            color: #65676b;
        }

        .product-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #dddfe2;
        }

        .btn-marketplace {
            border-radius: 6px;
            font-weight: 600;
            padding: 6px 12px;
            font-size: 0.85rem;
            text-decoration: none;
        }

        .btn-edit {
            background-color: #e7f3ff;
            color: #1877f2;
            border: 1px solid #1877f2;
        }

        .btn-delete {
            background-color: #ffe7e7;
            color: #fa383e;
            border: 1px solid #fa383e;
        }

        .btn-primary { /* Estilo para el botón Cotizar */
            background-color: #1877f2;
            color: white;
            border: 1px solid #1877f2;
        }

        .btn-add-product {
            background-color: #42b72a;
            color: white;
            font-weight: 600;
            border-radius: 6px;
            padding: 10px 20px;
            margin: 20px 0;
            border: none;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .filters-sidebar {
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
            border: 1px solid #dddfe2;
        }

        .filter-title {
            font-weight: 600;
            margin-bottom: 15px;
            color: #1c1e21;
            font-size: 1.2rem;
        }

        .filter-section {
            margin-bottom: 20px;
        }

            .filter-section h6 {
                font-weight: 600;
                margin-bottom: 10px;
                color: #1c1e21;
                font-size: 1rem;
            }

        .category-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .category-list li {
                padding: 8px 0;
                border-bottom: 1px solid #dddfe2;
            }

                .category-list li:last-child {
                    border-bottom: none;
                }

            .category-list a {
                color: #65676b;
                text-decoration: none;
                font-size: 0.9rem;
            }

                .category-list a:hover {
                    color: #1877f2;
                }

        .location-info {
            color: #65676b;
            font-size: 0.9rem;
        }

        .product-location {
            font-size: 0.8rem;
            color: #65676b;
        }

        .product-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

        /* Estilo común para ambos botones */
        .btn-action {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            border-radius: 0.375rem; /* redondeo de botones */
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.25rem;
            text-decoration: none;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
        }

        /* Color diferente solo para eliminar */
        .btn-delete-action {
            background-color: #dc3545; /* rojo bootstrap */
            color: #fff;
        }

        .btn-action:hover {
            opacity: 0.85;
        }

        /* Si quieres diferenciar Editar */
        .btn-action:not(.btn-delete-action) {
            background-color: #0d6efd; /* azul bootstrap */
            color: #fff;
        }


        .action-buttons {
    display: flex;
    justify-content: center; /* o "space-between" si quieres que se separen más */
    align-items: center;
    gap: 10px; /* espacio entre los botones */
}


    </style>
</head>
<body>
    <div class="marketplace-page">
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-3 col-md-4">
                    <div class="filters-sidebar">
                        <h5 class="filter-title">Información</h5>

                        <div class="filter-section">
                            
                        </div>

                        <div class="filter-section">
                            <h6>¡Descubre todo lo que tenemos para ti!</h6>
                            <ul class="category-list">
                                <li><a href="#">Alquileres</a></li>
                                <li><a href="#">Hogar y Jardín</a></li>
                                <li><a href="#">Vehículos</a></li>
                                <li><a href="#">Electrónicos</a></li>
                                <li><a href="#">Ventas para el Hogar</a></li>
                                <li><a href="#">Hobbies</a></li>
                                <li><a href="#">Ropa</a></li>
                                <li><a href="#">Zapatos</a></li>
                                <li><a href="#">otros</a></li>
                            </ul>
                        </div>
                    </div>

                    <a asp-controller="Producto" asp-action="Crear" class="btn btn-add-product w-100">
                        <i class="fas fa-plus-circle me-2"></i>Agregar Producto Nuevo
                    </a>
                </div>

                <div class="col-lg-9 col-md-8">
                    <div class="row">
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var producto in Model)
                            {
                                <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 mb-4">
                                    <div class="product-card">
                                        <div class="product-image-container">
                                            @if (producto.Imagen != null && producto.Imagen.Length > 0)
                                            {
                                                <img src="data:image/png;base64,@Convert.ToBase64String(producto.Imagen)"
                                                     alt="Imagen Producto" class="product-image" />
                                            }
                                            else
                                            {
                                                <div class="d-flex align-items-center justify-content-center h-100 text-muted">
                                                    <i class="fas fa-image fa-3x"></i>
                                                </div>
                                            }
                                        </div>

                                        <div class="product-info">
                                            <div class="product-price">@producto.Precio.ToString("C")</div>
                                            <h5 class="product-name">@producto.Nombre</h5>
                                            <p class="product-description">@producto.Descripcion</p>

                                            <div class="product-meta">
                                                <span class="product-status @(producto.Estado ? "status-active" : "status-inactive")">
                                                    @(producto.Estado ? "Activo" : "Inactivo")
                                                </span>
                                                <div class="product-location">
                                                    <small>Summerville, SC · 6 días</small>
                                                </div>
                                            </div>
                                            <div class="product-actions">
                                                @if (producto.UsuarioId == currentUserId)
                                                {
                                                    <div class="action-buttons d-flex gap-2">
                                                        <a asp-controller="Producto" asp-action="Editar" asp-route-id="@producto.Id"
                                                           class="btn btn-action" title="Editar">
                                                            <i class="fas fa-edit me-1"></i> Editar
                                                        </a>

                                                        <form asp-action="EliminarProducto" asp-route-id="@producto.Id" method="post">
                                                            <button type="submit" class="btn btn-action btn-delete-action" title="Eliminar">
                                                                <i class="fas fa-trash-alt me-1"></i> Eliminar
                                                            </button>
                                                        </form>
                                                    </div>

                                                }
                                                else
                                                {
                                                    <a asp-controller="Cotizacion" asp-action="Crear" asp-route-productoId="@producto.Id"
                                                       class="btn btn-primary btn-marketplace w-100" title="Cotizar">
                                                        <i class="fas fa-comment-dollar me-1"></i> Cotizar
                                                    </a>
                                                }
                                            </div>


                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <div class="alert alert-info alert-marketplace text-center">
                                    <h4>No se encontraron productos</h4>
                                    <p class="mb-0">¡Sé el primero en publicar!</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>