@model FrontWally.DTOs.CotizacionDTOs.CotizacionCreateDTO

@{
    ViewData["Title"] = "Crear Cotización";
}

<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Nueva Cotización</h2>
                    </div>
                </div>
                <div class="row tm-edit-product-row">
                    <div class="col-xl-12 col-lg-12 col-md-12">
                        <form asp-action="Crear" method="post" class="tm-edit-product-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Contacto" class="control-label">Contacto</label>
                                        <input asp-for="Contacto" class="form-control validate" required />
                                        <span asp-validation-for="Contacto" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Fecha" class="control-label">Fecha</label>
                                        <input asp-for="Fecha" type="date" class="form-control validate" required />
                                        <span asp-validation-for="Fecha" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="ProductoId" class="control-label">Producto</label>
                                        <select asp-for="ProductoId" class="custom-select tm-select-accounts" required id="productoSelect">
                                            <option value="">Seleccionar Producto</option>
                                            @if (ViewBag.Productos != null)
                                            {
                                                foreach (var producto in ViewBag.Productos)
                                                {
                                                    <option value="@producto.Id" data-precio="@producto.Precio">@producto.Nombre - @producto.Precio.ToString("C")</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="ProductoId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Cantidad" class="control-label">Cantidad</label>
                                        <input asp-for="Cantidad" type="number" class="form-control validate" min="1" value="1" id="cantidadInput" />
                                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="control-label">Precio Unitario</label>
                                        <input type="text" class="form-control validate" id="precioUnitario" readonly value="0.00" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="control-label">Total</label>
                                        <input asp-for="Total" type="text" class="form-control validate" id="totalInput" readonly />
                                        <span asp-validation-for="Total" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block text-uppercase">Crear Cotización</button>
                                <a asp-action="Index" class="btn btn-secondary btn-block text-uppercase mt-2">Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(function() {
            // Establecer fecha actual por defecto
            var today = new Date().toISOString().split('T')[0];
            $('#Fecha').val(today);

            // Calcular total cuando cambia producto o cantidad
            function calcularTotal() {
                var productoSelect = $('#productoSelect');
                var cantidadInput = $('#cantidadInput');
                var precioUnitario = $('#precioUnitario');
                var totalInput = $('#totalInput');

                var productoSeleccionado = productoSelect.find('option:selected');
                var precio = parseFloat(productoSeleccionado.data('precio')) || 0;
                var cantidad = parseInt(cantidadInput.val()) || 0;

                precioUnitario.val('$' + precio.toFixed(2));
                var total = precio * cantidad;
                totalInput.val(total.toFixed(2));
            }

            $('#productoSelect, #cantidadInput').change(calcularTotal);

            // Calcular inicialmente
            calcularTotal();
        });
    </script>
}