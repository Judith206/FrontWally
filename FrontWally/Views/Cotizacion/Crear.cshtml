@model FrontWally.DTOs.CotizacionDTOs.CotizacionCreateDTO

@{
    ViewData["Title"] = "Crear Cotización";
}

<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Nueva Cotización</h2>
                    </div>
                </div>
                <div class="row tm-edit-product-row">
                    <div class="col-xl-12 col-lg-12 col-md-12">
                        <form asp-action="Crear" method="post" class="tm-edit-product-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Contacto" class="control-label">Contacto</label>
                                        <input asp-for="Contacto" class="form-control validate" required />
                                        <span asp-validation-for="Contacto" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Fecha" class="control-label">Fecha</label>
                                        <input asp-for="Fecha" type="date" class="form-control validate" required />
                                        <span asp-validation-for="Fecha" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="ProductoId" class="control-label">Producto</label>
                                <select asp-for="ProductoId" class="custom-select tm-select-accounts" required>
                                    <option value="">Seleccionar Producto</option>
                                    @if (ViewBag.Productos != null)
                                    {
                                        foreach (var producto in ViewBag.Productos)
                                        {
                                            <option value="@producto.IdProducto">@producto.Nombre - @producto.Precio.ToString("C")</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="ProductoId" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label class="control-label">Información Adicional</label>
                                <textarea class="form-control validate" rows="4" placeholder="Notas adicionales sobre la cotización..."></textarea>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="control-label">Cantidad</label>
                                        <input type="number" class="form-control validate" value="1" min="1" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label class="control-label">Descuento</label>
                                        <input type="number" class="form-control validate" value="0" min="0" max="100" step="0.01" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block text-uppercase">Crear Cotización</button>
                                <a asp-action="Index" class="btn btn-secondary btn-block text-uppercase mt-2">Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(function() {
            // Establecer fecha actual por defecto
            var today = new Date().toISOString().split('T')[0];
            $('#Fecha').val(today);
        });
    </script>
}
